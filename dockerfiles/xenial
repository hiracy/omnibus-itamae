FROM ubuntu:16.04
RUN apt-get update && \
  apt-get -y install curl git build-essential && \
  curl -L -o /tmp/chefdk.deb https://packages.chef.io/stable/ubuntu/12.04/chefdk_0.14.25-1_amd64.deb && \
  dpkg -i /tmp/chefdk.deb && \
  git config --global user.email "ryota.arai+itamae@gmail.com" && \
  git config --global user.name "Itamae Builder"
ADD . /work
WORKDIR /work
RUN rm -rf .bundle && \
  /opt/chefdk/embedded/bin/bundle install -j4
